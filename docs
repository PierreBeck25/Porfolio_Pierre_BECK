  <footer class="py-8 border-t border-slate-200/70 dark:border-slate-800 text-center text-sm text-slate-500">
    ¬© <span id="year"></span> Pierre BECK ¬∑ Construit avec ‚ô•Ô∏è et Tailwind
  </footer>

  <script>
    // --- Dark mode toggle (save preference)
    const themeToggle = document.getElementById('themeToggle');
    const root = document.documentElement;
    const pref = localStorage.getItem('theme');
    if (pref === 'dark' || (!pref && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      root.classList.add('dark');
    }
    themeToggle?.addEventListener('click', () => {
      root.classList.toggle('dark');
      localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
    });

    // --- Dates
    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('lastUpdated').textContent = new Date().toLocaleDateString('fr-FR');

    // --- Projets (√©diter ici)
    const PROJECTS = [
      {
        title: 'NBA Shot Analytics',
        desc: 'Analyse spatiale des tirs NBA ¬∑ Heatmaps, efficacit√© par zone, mod√®le xShot.',
        tags: ['python','viz','sports'],
        repo: 'https://github.com/PierreBeck25/nba-shot-analytics',
        demo: '',
      },
      {
        title: 'Demandes Concerts ¬∑ Festival',
        desc: 'Scraping billetterie + forecasts de demande pour dimensionner un festival.',
        tags: ['python','scraping','forecast'],
        repo: 'https://github.com/PierreBeck25/concert-demand-forecast',
        demo: '',
      },
      {
        title: 'Recruitment Funnel BI',
        desc: 'Tableau de bord Power BI: temps de cycle, conversion, qualit√© des candidats.',
        tags: ['powerbi','business','recrutement'],
        repo: 'https://github.com/PierreBeck25/recruitment-funnel-bi',
        demo: '',
      },
      {
        title: 'Churn e‚Äëcommerce (cohortes)',
        desc: 'Cohortes, LTV et churn prediction avec Polars + scikit-learn.',
        tags: ['python','ml','cohortes'],
        repo: 'https://github.com/PierreBeck25/ecom-churn-cohorts',
        demo: '',
      },
      {
        title: 'Pricing billets avion (RAG)',
        desc: 'Notes d‚Äôanalyse + RAG sur docs pour r√©sumer les tendances de prix.',
        tags: ['ai','rag','notes'],
        repo: 'https://github.com/PierreBeck25/flight-pricing-rag',
        demo: '',
      },
      {
        title: 'Open Data Gen√®ve',
        desc: 'Exploration DuckDB + notebooks sur open data mobilit√©/√©nergie √† Gen√®ve.',
        tags: ['duckdb','sql','opendata'],
        repo: 'https://github.com/PierreBeck25/opendata-geneve',
        demo: '',
      },
    ];

    // --- Tags uniques
    const ALL_TAGS = Array.from(new Set(PROJECTS.flatMap(p => p.tags))).sort();
    const tagsEl = document.getElementById('tags');
    const gridEl = document.getElementById('grid');
    const searchEl = document.getElementById('search');
    let activeTags = new Set();

    function renderTags(){
      tagsEl.innerHTML = '';
      ALL_TAGS.forEach(t => {
        const b = document.createElement('button');
        b.textContent = t;
        b.className = 'px-3 py-1.5 rounded-xl border text-sm border-slate-200 dark:border-slate-800 hover:bg-slate-100 dark:hover:bg-slate-800';
        b.onclick = () => { activeTags.has(t) ? activeTags.delete(t) : activeTags.add(t); renderProjects(); };
        tagsEl.appendChild(b);
      });
    }

    function match(p){
      const q = (searchEl?.value || '').toLowerCase();
      const inSearch = !q || p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q) || p.tags.join(' ').includes(q);
      const inTags = activeTags.size === 0 || p.tags.some(t => activeTags.has(t));
      return inSearch && inTags;
    }

    function card(p){
      const a = document.createElement('a');
      a.href = p.repo; a.target = '_blank';
      a.className = 'group block p-5 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white/60 dark:bg-slate-900/40 hover:shadow-soft hover:-translate-y-0.5 transition';
      a.innerHTML = `
        <div class="flex items-start justify-between">
          <h3 class="font-semibold text-lg">${p.title}</h3>
          <span class="text-xs px-2 py-1 rounded-lg border border-slate-200 dark:border-slate-800">Repo</span>
        </div>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">${p.desc}</p>
        <div class="mt-3 flex flex-wrap gap-2">${p.tags.map(t=>`<span class='text-xs px-2 py-1 rounded-lg bg-slate-100 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-800'>${t}</span>`).join('')}</div>
      `;
      return a;
    }

    function renderProjects(){
      gridEl.innerHTML = '';
      PROJECTS.filter(match).forEach(p => gridEl.appendChild(card(p)));
    }

    searchEl?.addEventListener('input', renderProjects);
    renderTags();
    renderProjects();
  </script>
